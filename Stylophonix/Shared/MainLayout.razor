@inherits LayoutComponentBase
@inject NavigationManager NavManager

<a href="/" id="logo" class="@(PageTitle() ? "logo-fadein" : "")">
    <img src="img/photos/stylophonix_logo.png" alt="Stylophonix Logo"/>
</a>

<main> @Body </main>
<NavMenu/>

@code
{
    bool PageTitle()
    {
        var relPath = NavManager.ToBaseRelativePath(NavManager.Uri);
        return string.IsNullOrWhiteSpace(relPath);
    }
}